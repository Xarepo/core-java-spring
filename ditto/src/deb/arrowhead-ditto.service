[Unit]
Description=arrowhead-ditto
After=network.target mysql.target

[Service]
WorkingDirectory=/etc/arrowhead/systems/ditto
ExecStart=/usr/bin/java -Dlog4j.configurationFile=file:/etc/arrowhead/systems/ditto/log4j2.xml -jar /usr/share/arrowhead/ditto/arrowhead-ditto.jar
TimeoutStopSec=5
Restart=on-failure
RestartSec=20s
Type=simple
User=arrowhead
Group=arrowhead

[Install]
WantedBy=default.target
